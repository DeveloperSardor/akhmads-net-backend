{
  "name": "akhmads-net-backend",
  "version": "1.0.0",
  "description": "Telegram Ad Distribution Platform - Enterprise Backend",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test --coverage --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:unit": "cross-env NODE_ENV=test jest tests/unit",
    "test:integration": "cross-env NODE_ENV=test jest tests/integration",
    "test:e2e": "cross-env NODE_ENV=test jest tests/e2e",
    "test:bot": "node test-bot.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "node src/prisma/seed.js",
    "prisma:reset": "prisma migrate reset --force && npm run prisma:seed",
    "db:backup": "node scripts/backup-db.js",
    "db:setup": "prisma migrate dev && npm run prisma:seed",
    "workers": "node scripts/startWorkers.js",
    "generate-keys": "node scripts/generateKeys.js",
    "create-admin": "node scripts/createAdmin.js"
  },
  "keywords": [
    "telegram",
    "ads",
    "distribution",
    "platform"
  ],
  "author": "Sardor Karim",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.995.0",
    "@aws-sdk/s3-request-presigner": "^3.982.0",
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^5.22.0",
    "argon2": "^0.31.2",
    "axios": "^1.13.4",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.67.2",
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "crypto-js": "^4.2.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.22.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.3.1",
    "grammy": "^1.40.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "i18next": "^23.16.8",
    "i18next-fs-backend": "^2.3.1",
    "input": "^1.0.1",
    "ioredis": "^5.9.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.3",
    "minio": "^8.0.6",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "nanoid": "^5.1.6",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.1",
    "openai": "^6.22.0",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.3.1",
    "redis": "^5.10.0",
    "sharp": "^0.33.5",
    "speakeasy": "^2.0.0",
    "telegram": "^2.26.22",
    "uuid": "^9.0.1",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "prisma": "^5.22.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
